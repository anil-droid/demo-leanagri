<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:id="@+id/ll_filter"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Filter"
        android:text="Popularity Descending"
        android:id="@+id/tv_pop_des"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Filter"
        android:text="Popularity Ascending"
        android:id="@+id/tv_pop_asc"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Filter"
        android:id="@+id/tv_rating_dsc"
        android:text="Rating Descending" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Filter"
        android:text="Rating Ascending"
        android:id="@+id/tv_rating_asc"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Filter"
        android:text="Release Date Descending"
        android:id="@+id/tv_release_dsc"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Filter"
        android:text="Release Date Ascending"
        android:id="@+id/tv_release_asc"
        />

</LinearLayout>